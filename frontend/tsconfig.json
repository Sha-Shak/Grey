{
  "compilerOptions": {
    "target": "es2021",   
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": true,      
    "moduleResolution": "node",                                                       
    "outDir": "./dist",                               
    "removeComments": false,
    "noEmit": true,                              
    "isolatedModules": true,                    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },  

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
